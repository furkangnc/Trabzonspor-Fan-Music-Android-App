<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetayActivity"
    android:background="@drawable/detayback">

    <ImageView
        android:id="@+id/detayImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/imgback"
        android:layout_above="@+id/seekbarPlay"
        android:padding="10dp"
        android:layout_margin="30dp"/>

    <SeekBar
        android:id="@+id/seekbarPlay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/textBas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:layout_below="@+id/seekbarPlay"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textColor="#f5dbe8"/>

    <TextView
        android:id="@+id/textSon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:layout_below="@+id/seekbarPlay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="#f5dbe8"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/seekbarPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/play"/>
    
    <Button
        android:id="@+id/favoriButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/playButton"
        android:layout_margin="65dp"
        android:background="@drawable/plus"/>

</RelativeLayout>